@model ProjetoFinal.Models.Logins.Login;
@{
    ViewData["Title"] = "Login";
}


@await Html.PartialAsync("../_Notificacao.cshtml")
<h2>Login</h2>
<form asp-action="Login">
    <div class="mb-3">
        <label for="username" class="form-label">Nome</label>
        <input asp-for="UserName" type="text" class="form-control" id="username">
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input asp-for="Password" type="password" class="form-control" id="password">
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-success" />
    </div>
</form>
<p></p>
<div id="btns-Login">
    <a asp-action="CriarUsuario" class="btn btn-primary">Primeiro Acesso</a>
    <a asp-action="EsqueciSenha" class="btn btn-primary">Esqueci Minha Senha</a>
</div>
