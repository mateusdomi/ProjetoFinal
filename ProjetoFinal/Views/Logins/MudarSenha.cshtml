<h2>Login</h2>
<form asp-action="MudarSenha">
    <cache name="username">@ViewData["Username"]</cache>
    <div class="mb-3">
        <label for="senhaPri" class="form-label">Senha</label>
        <input name="senhaPri" type="password" class="form-control">
    </div>
    <input name="username" type="hidden" value="@ViewData["username"]" />
    <div class="mb-3">
        <label for="senhaSeg" class="form-label">Repita a Senha</label>
        <input name="senhaSeg" type="password" class="form-control" id="password">
    </div>
    <div class="form-group">
        <input type="submit" value="Mudar" class="btn btn-success" />
    </div>
</form>
<p></p>
